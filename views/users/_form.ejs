<script>
	function confirmPassword() {
		var pw1 = document.getElementById('user_password').value;
		var pw2 = document.getElementById('user_confirm_password').value;

		if (!pw1 || !pw2) {
			alert('Debe rellenar los campos de Password y Confirmacion');
			return false;
		}
		if (pw1 === pw2) {
			return true;
		} else {
			alert('Los passwords introducidos no coinciden.');
			return false;
		}
	}
</script>


<div class="form-group">
	<% if(!user.id){ %>
			<label for="preg" class="rem">Username:</label>
			<input type="text" class="form-control" id="username" name="user[username]" value="<%= user.username %>"/>
	<% } else { %>
		<label for="preg" class="rem">Username: <%= user.username %></label>
	<% } %>
</div>
<div class="form-group">
	<label for="user_password" class="rem">Password:</label>
	<input type="password" class="form-control" id="user_password" name="user[password]"/> 
</div>
<div class="form-group">
	<label for="user_confirm_password" class="rem">Confirmar Password:</label>
	<input type="password" class="form-control" id="user_confirm_password"/> 
</div>
<button type="submit" class="btn btn-lg btn-success" onclick="return confirmPassword()">Guardar</button>
<a href="/"><button type="button" class="btn btn-lg btn-success">Cancelar</button></a>

<div class="row">
	<div class="col-sm-4">
		<label >Texto a buscar:</label>
		<form role="form" class="form-inline" method="get" action="/quizzes">
			<div class="form-group">
				<input class="form-control" type="text" name="search" value="" placeholder="Busqueda" />
				<button type="submit" class="btn btn-primary">Buscar</button>
			</div>      
		</form>
		<% if (session.user) { %>
			<a href="/quizzes/new"><button type="button" class="btn btn-primary">Crear pregunta</button></a>
		<% } %>
	</div>
	<div class="col-sm-8">
	<table class="table table-condensed">
		<% for (var i in quizzes) { %>        
		<tr>
			<td>
				<% if (quizzes[i].Attachment) { %>
					<img src="<%= quizzes[i].Attachment.url %>" width="50px"/>
				<% } else { %>
					<img src="/images/question.png" width="50px"/>
				<% } %>
			</td>

			<td>
				<a href="/quizzes/<%= quizzes[i].id %>"><%= quizzes[i].question %></a>
			</td>
			<% if (session.user) { %>
				<% if (session.user.isAdmin || session.user.id === quizzes[i].AuthorId) { %>
					<td>
						<a href="/quizzes/<%= quizzes[i].id %>/edit"><button class="btn btn-sm btn-primary">Editar</button></a>
					</td>
					<td>
						<a href="/quizzes/<%= quizzes[i].id %>?_method=DELETE"
						onClick="return confirm("Borrar: <%= quizzes[i].question %>");"
						<button class="btn btn-sm btn-primary">Borrar</button></a>
					</td>
				<% } %>
			<% } %>
		</tr> 
		<% } %>
	</table>
	</div>
</div>
